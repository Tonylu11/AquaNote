<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('css/materialize.min.css') }}"/>
<link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
<body>
    <header class="header">
        <img class="logo-icon" src="{{ asset('images/logo.png') }}">
        <h1 class="logo">Agenda de contactos</h1>
        <ul class="navi"></ul>
    </header>
  <div class="main-content">
    <div class="container">
      <div class="row">
        <form class="col s6 centrar" action="{{ path('login') }}" method="post">
          <div class="row">
            <div class="input-field col s12">
              {# Input para el campo email #}
              <i class="material-icons prefix">account_circle</i>
              <label for="username" class="campos">Email:</label>
              <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>

            {# Input para el campo contraseña #}
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">vpn_key</i>
              <label for="password" class="campos">Contraseña:</label>
              <input type="password" id="password" name="_password" />
            </div>
          </div>
          {% if error %}
              <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}

            {# Ruta a la que redirige si hay éxito #}
            <input type="hidden" name="_target_path" value="/agenda" />
          <div class="row">
              <a class="waves-effect waves-light btn left" href="{{ path('register') }}"><i class="material-icons left">person_add</i>Registro</a>
              <button class="btn waves-effect waves-light right" type="submit" name="action">Enviar
                <i class="material-icons right">send</i>
              </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="footer">
      <p class="footer-text">Realizado por <a href="https://www.github.com/TonyLu11">Antonio Luque Bravo</a></p>
  </div>
</body>

